<div class="page-header">
    <h1>Új feladat</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group
            {{#if validationErrors.helyszin}}
                has-error
            {{/if}}
        ">
            <label for="helyszin" class="col-lg-2 control-label">Helyszín</label>
            <div class="col-lg-10">
                <input class="form-control" id="helyszin" name="helyszin" type="text" value="{{data.helyszin}}">
                {{#if validationErrors.helyszin}}
                    <span class="help-block">{{validationErrors.helyszin.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group
            {{#if validationErrors.leiras}}
                has-error
            {{/if}}
        ">
            <label for="leiras" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="leiras" name="leiras">{{data.leiras}}</textarea>
                <span class="help-block">El ne felejtsd megadni a helyszínt!</span>
                {{#if validationErrors.leiras}}
                    <span class="help-block">{{validationErrors.leiras.msg}}</span>
                {{/if}}
            </div>
            <label for="leiras" class="col-lg-2 control-label">Fontosság (3: fontos, 2: még ma, 1: ha van időd, 0: kész)</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="statusz" name="statusz">{{data.statusz}}</textarea>
                {{#if validationErrors.statusz}}
                    <span class="help-block">{{validationErrors.statusz.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Mégse</button>
                <button type="submit" class="btn btn-primary">Felvétel</button>
            </div>
        </div>
    </fieldset>
</form>        